<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".onboarding.OnBoardThree"
    android:background="@drawable/ic_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/onboard_3"
            android:layout_marginHorizontal="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:paddingTop="24dp"
            android:paddingLeft="@dimen/two_x"
            android:paddingRight="@dimen/two_x"
            android:paddingBottom="56dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_onboard"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/onBoardText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboard_3_title"
                    android:textStyle="bold"
                    android:minLines="2"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="100dp"
                    android:text="@string/onboard_3_subtitle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/onBoardText"
                app:layout_constraintBottom_toBottomOf="parent">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_label"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/one_x"
                    android:id="@+id/sign_up"
                    app:strokeColor="@color/colorPrimary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/signin_label"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/one_x"
                    android:id="@+id/sign_in"
                    style="@style/Widget.MaterialComponents.Button"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>