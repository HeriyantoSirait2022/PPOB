<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_toolbar"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#00ffffff"
            android:id="@+id/toolbar">
            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sidemenu"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_menu_white_24"
                android:layout_marginLeft="@dimen/two_x"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/home_menu_agency"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginRight="@dimen/one_x"
                android:autoSizeTextType="uniform"
                android:textAllCaps="false"
                android:text="@string/contact_us_label"
                android:gravity="right"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@color/white"
                app:iconTint="@color/white"
                app:icon="@drawable/ic_icon_kontak_cs_whitehdpi"
                app:iconGravity="end"
                android:textSize="12sp"
                android:id="@+id/contact_us"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/toolbar">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/two_x"
                android:layout_marginVertical="@dimen/one_x">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/premium"
                        android:background="@drawable/ic_referral_code"
                        android:layout_width="match_parent"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/two_x"
                        android:paddingLeft="@dimen/two_x"
                        android:layout_height="100dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h5"
                            android:textAllCaps="true"
                            android:text="@string/agency_referral_code">
                        </TextView>
                        <TextView
                            android:id="@+id/referral_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h1"
                            android:paddingTop="@dimen/two_x"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="SARUJO">
                        </TextView>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/standard"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_banner_keagenanhdpi"/>
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:insetBottom="0dp"
                        android:text="@string/agency_upgrade_premium"
                        android:backgroundTint="@color/white"
                        android:id="@+id/upgrade"
                        style="@style/Widget.MaterialComponents.Button.TextButton"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agency_feature"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                android:layout_marginHorizontal="@dimen/two_x"
                android:layout_marginTop="@dimen/two_x"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_x"
                android:id="@+id/list"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>