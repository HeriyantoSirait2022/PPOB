<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/home"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/one_x"
            android:src="@drawable/ic_icon_homehdpi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_x"
            android:textColor="@color/colorPrimary"
            android:text="@string/home_menu_home"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_x"
            android:layout_marginTop="@dimen/one_x"
            android:id="@+id/home_selected"
            android:background="@drawable/rounded_bottom_menu_selected"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/order"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/one_x"
            android:src="@drawable/ic_icon_invoicehdpi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/one_x"
            android:text="@string/home_menu_order"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_x"
            android:layout_marginTop="@dimen/one_x"
            android:id="@+id/order_selected"
            android:background="@drawable/rounded_bottom_menu_selected"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/agency"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/one_x"
            android:src="@drawable/ic_icon_keagenanhdpi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/one_x"
            android:text="@string/home_menu_agency"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_x"
            android:layout_marginTop="@dimen/one_x"
            android:id="@+id/agency_selected"
            android:background="@drawable/rounded_bottom_menu_selected"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:id="@+id/account"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/one_x"
            android:src="@drawable/ic_icon_userhdpi"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/one_x"
            android:text="@string/home_menu_account"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_x"
            android:layout_marginTop="@dimen/one_x"
            android:id="@+id/account_selected"
            android:background="@drawable/rounded_bottom_menu_selected"/>
    </LinearLayout>

</LinearLayout>