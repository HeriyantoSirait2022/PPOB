<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/rounded_onboard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/show_detail"
            android:background="@drawable/rounded_bottom_menu_selected"
            android:paddingVertical="4dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_up_white_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text="@string/choose_payment_swipe_detail_title"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/two_x">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/total_price_label"
                    android:textSize="@dimen/two_x"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 50.000"
                    android:textSize="@dimen/two_x"
                    android:textStyle="bold"
                    android:id="@+id/total_price"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/six_x"
                    android:id="@+id/coupon"
                    android:layout_marginRight="@dimen/one_x"
                    app:strokeColor="@color/colorPrimary"
                    app:icon="@drawable/ic_coupon_primary"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="@string/use_coupon_label"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#fff"
                    android:id="@+id/buy_now"
                    android:textSize="@dimen/six_x"
                    android:layout_marginLeft="@dimen/one_x"
                    app:icon="@drawable/ic_money_white"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/buy_now_label"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>