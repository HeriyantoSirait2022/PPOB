<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    tools:context=".payment.virtual_account.VirtualAccountPayActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_toolbar"/>
        <include layout="@layout/toolbar_layout"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    layout="@layout/order_overview_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/two_x"
                    android:layout_marginTop="@dimen/two_x"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/two_x">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_payment_time_title"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_x"
                        android:layout_marginHorizontal="@dimen/two_x"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="@dimen/two_x">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_x">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_access_time_black_24"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="@dimen/two_x">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_marginRight="@dimen/one_x">
                                        <TextView
                                            android:id="@+id/hour"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="01"
                                            android:textColor="@color/black"
                                            android:textSize="22dp" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Jam" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_marginHorizontal="@dimen/one_x">
                                        <TextView
                                            android:id="@+id/minute"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="59"
                                            android:textColor="@color/black"
                                            android:textSize="22dp" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Menit" />
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_marginLeft="@dimen/one_x">
                                        <TextView
                                            android:id="@+id/second"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="31"
                                            android:textColor="@color/black"
                                            android:textSize="22dp"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Detik" />
                                    </LinearLayout>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/finish_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/two_x"
                                    android:textColor="@color/black"
                                    android:text="16 April 2020 (12:30 WIB)"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_total_payment_title"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/two_x"
                        android:layout_marginHorizontal="@dimen/two_x"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="@dimen/two_x">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_x"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="top"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:text="Rp."/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="53.000"
                                    android:id="@+id/total_price"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="24dp"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/disabled"
                                android:layout_marginVertical="@dimen/two_x"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_detail_barcode_label"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pay_detail_label"
                                android:textSize="14dp"
                                android:id="@+id/detail"
                                android:textColor="@color/blue_completed"
                                style="@style/Widget.MaterialComponents.Button.TextButton"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/pay_payment_to_qris_title"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/two_x"
                        android:layout_marginHorizontal="@dimen/two_x"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="@dimen/two_x">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/two_x"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <ImageView
                                        android:layout_width="200dp"
                                        android:layout_height="180dp"
                                        android:adjustViewBounds="true"
                                        android:id="@+id/qr_code"/>
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:visibility="gone"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_file_copy_black_24"
                                    android:id="@+id/copy"/>
                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="@dimen/one_x"
                                android:background="@color/disabled"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:textColor="@color/blue_completed"
                                android:id="@+id/how_to_pay"
                                android:text="@string/pay_how_to_pay_qris_label"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/two_x"
                    android:layout_marginBottom="@dimen/two_x"
                    android:background="@color/rule"
                    android:padding="@dimen/two_x"
                    android:text="@string/pay_secure_transaction_label"/>
                <include
                    layout="@layout/pay_trouble_transaction_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/two_x"
                    android:layout_marginBottom="@dimen/two_x"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>