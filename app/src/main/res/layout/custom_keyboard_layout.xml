                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/one_x">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/one_x"
                        android:paddingHorizontal="@dimen/two_x"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/two_x"
                        android:id="@+id/custom_keyboard_0"
                        android:text="0"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/one_x">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/one_x"
                        android:paddingHorizontal="@dimen/two_x"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/two_x"
                        android:id="@+id/custom_keyboard_comma"
                        android:text="."/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="@dimen/one_x"
            android:backgroundTint="@color/colorPrimary">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/one_x"
                android:paddingHorizontal="@dimen/two_x"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="@dimen/two_x"
                android:id="@+id/custom_keyboard_next"
                android:text="@string/next_label"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
