<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/two_x"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <!-- <code> -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order ID #888349923"
                android:id="@+id/order_id"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/one_x"
                android:layout_weight="1"/>
            <!-- </code> -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/copy_transaction_id"
                android:src="@drawable/ic_file_copy_black_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_x"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/order_date"
                android:text="16 April 2020 (12:30 WIB)"
                android:layout_marginRight="@dimen/one_x"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/three_x"
                android:background="@color/colorPrimary"
                android:id="@+id/order_status"
                android:textColor="#ffffff"
                android:text="@string/agency_commition_history_success"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>