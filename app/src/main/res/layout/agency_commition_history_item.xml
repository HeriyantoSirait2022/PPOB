<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingVertical="@dimen/list_item_padding_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/two_x"
            android:textSize="@dimen/title_size"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/one_x"
            android:id="@+id/title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/two_x"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_access_time_black_24"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/one_x"
                android:id="@+id/time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="@dimen/six_x"
            android:background="@color/disabled"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/two_x"
        android:paddingBottom="@dimen/two_x"
        android:visibility="gone" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/two_x"
            android:paddingBottom="@dimen/one_x"
            android:textColor="@color/black"
            android:id="@+id/title2"/>
    </LinearLayout>
</LinearLayout>