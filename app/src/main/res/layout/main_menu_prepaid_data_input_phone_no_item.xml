<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/ic_package"
    android:layout_height="130dp">

    <LinearLayout
        android:paddingVertical="8dp"
        android:paddingHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/point"
                    android:textSize="11dp"
                    android:paddingVertical="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="start"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/one_x"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/status"
                    android:background="#F2994A"
                    android:textSize="11dp"
                    android:paddingVertical="2dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="end"
                    android:textColor="@color/white"
                    android:paddingHorizontal="@dimen/one_x"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/first_char"
                    android:layout_gravity="center"
                    android:gravity="bottom"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:text="1."
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="bottom"
                    android:textSize="18sp"
                    android:text="000"
                    android:id="@+id/rest_char"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="@dimen/two_x"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/two_x"
                android:textSize="11sp"
                android:text="Masa Aktif Kartu Bertambah 1 Hari"
                android:gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
