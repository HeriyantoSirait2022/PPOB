<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coupon_list_no_data_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/three_x"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_x"
            android:src="@drawable/ic_illustrasi_kode_kuponhdpi"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coupon_list_empty_title"
            android:textSize="@dimen/title_size"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/two_x"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coupon_list_empty_subtitle"
            android:gravity="center"
            android:layout_marginTop="@dimen/two_x"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>